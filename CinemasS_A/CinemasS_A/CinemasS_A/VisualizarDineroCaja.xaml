<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CinemasS_A.VisualizarDineroCaja">
    <ContentPage.Content>
       
        <Grid>
                <Image Source="fondocine.png" Aspect="AspectFill" />
            <BoxView Color="#0B1761" Opacity="0.4"/>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition ></RowDefinition>
                    <RowDefinition ></RowDefinition>
                    <RowDefinition ></RowDefinition>
                </Grid.RowDefinitions>

                    <BoxView Color="#777A8A"
                      Opacity="0.7" Grid.Row="1"/>

                    <StackLayout Grid.Row="1">
                        <Label Text="Dinero en caja:" Style="{StaticResource Contenido}"/>
                                              
                        <Entry   x:Name="dineroencaja"  Placeholder="$70.000" Style="{StaticResource EntryStyle}"     ></Entry>
                    </StackLayout>
              
                
            

            </Grid>
        </Grid>
     
    </ContentPage.Content>
</ContentPage>